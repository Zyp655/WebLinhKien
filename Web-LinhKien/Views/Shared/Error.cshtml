@* File: Views/Shared/Error.cshtml *@
@model Web_LinhKien.Models.ErrorViewModel 
@{
    ViewData["Title"] = "Lỗi";
}

<h1 class="text-danger">Lỗi.</h1>
<h2 class="text-danger">Đã xảy ra lỗi khi xử lý yêu cầu của bạn.</h2>

@if (Model != null && Model.ShowRequestId) // Kiểm tra Model null
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
@if (Model != null && !string.IsNullOrEmpty(Model.Message)) // Kiểm tra Model null và Message
{
    <p>
        <strong>Thông báo:</strong> <code>@Model.Message</code>
    </p>
}

