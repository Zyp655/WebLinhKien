@* File: Views/Product/Index.cshtml *@
@model IEnumerable<Web_LinhKien.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@Url.Content(item.ImageUrl)" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description.Substring(0, Math.Min(item.Description.Length, 100)) ...</p>
                    <p class="card-text">Giá: @item.Price.ToString("N0") VNĐ</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>