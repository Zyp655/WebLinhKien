@* File: Views/Home/Index.cshtml *@
@model List<Web_LinhKien.Models.Product> 
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center mb-4">
    <h1 class="display-4">Chào mừng đến với Web Linh Kiện</h1>
    <p class="lead">Trang web mua sắm linh kiện điện tử chuyên nghiệp.</p>
</div>

<h3 class="mb-3">Sản phẩm nổi bật</h3>
<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4"> @* Sử dụng Bootstrap để sắp xếp sản phẩm *@
                <div class="card h-100 shadow-sm"> @* Thêm shadow và đảm bảo chiều cao bằng nhau *@
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top p-3" alt="@product.Name" style="max-height: 200px; object-fit: contain;"> @* Thêm padding *@
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/200x150?text=No+Image" class="card-img-top p-3" alt="No Image" style="max-height: 200px; object-fit: contain;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@product.Name</h5> @* Giới hạn độ dài tiêu đề *@
                        <p class="card-text text-muted mb-2"><small>@product.Category.Name</small></p> @* Hiển thị tên danh mục *@
                        <p class="card-text flex-grow-1">@product.Description</p> @* Để mô tả có thể giãn ra *@
                        <p class="card-text fs-5 fw-bold text-danger">@product.Price.ToString("N0") VNĐ</p> @* Định dạng giá tiền và làm nổi bật *@
                        <div class="mt-auto"> @* Đẩy nút về phía dưới cùng của card *@
                            <a href="#" class="btn btn-primary w-100">Xem chi tiết</a> @* Bạn có thể thêm link đến trang chi tiết sản phẩm *@
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                Hiện tại không có sản phẩm nào được hiển thị.
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}