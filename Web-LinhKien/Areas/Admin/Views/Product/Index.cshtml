@* File: Areas/Admin/Views/Product/Index.cshtml *@
@model IEnumerable<Web_LinhKien.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "_Layout";
}

<h1>Quản lý Sản phẩm</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới sản phẩm</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Tên sản phẩm</th>
        <th>Giá</th>
        <th>Danh mục</th>
        <th>Hành động</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price.ToString("N0") VNĐ</td>
            <td>@item.Category.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>